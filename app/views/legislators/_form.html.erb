<table cellpadding="0" cellspacing="0">
<% form_for :legislator, :url => { :controller => "legislators", :action => "search" } do |f| %>
<tr>
<td valign="middle"><%= f.text_field :name, :size => 25, :maxlength => 60, :autocomplete =>"off" %></td>
<td valign="middle" style="padding-left: 5px;">
	<%= f.submit "Search" %>
</td>
</tr>
</table>
<% end %>
<div id="search_links">
	or your zip code/address.  Here's the <a href="http://<%= BASE_URL %><%= url_for legislators_url(:only_path => true) %>">Full List</a>.
</div>