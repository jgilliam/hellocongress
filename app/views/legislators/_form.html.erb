<table cellpadding="0" cellspacing="0">
<% form_for :legislator, :url => { :controller => "legislators", :action => "search" } do |f| %>
<tr>
<td valign="middle"><%= f.text_field :name, :size => 25, :maxlength => 60, :autocomplete =>"off", :title => "Not sure who represents you?  Just put in your address or zip code." %></td>
<td valign="middle" style="padding-left: 5px;">
	<%= f.submit "Search", :class => "search_button" %>
</td>
</tr>
</table>
<% end %>
<div id="search_links">
	<a href="http://<%= BASE_URL %>/">Homepage</a>
	&middot;
	<a href="http://<%= BASE_URL %><%= url_for legislators_url(:only_path => true) %>">Complete list of legislators</a>
</div>