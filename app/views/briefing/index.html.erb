<form action="http://whitehouse2.org/briefing/search" method="get">

	<input id="q" name="q" size="30" type="text" title="Search our library of over 2000 documents and talking points" />
	<input name="commit" type="submit" value="Search" class="search_button" />
</form>

<p>
<div class="heading">Talking Points by Issue</div>
<table border="0" cellspacing="0" cellpadding="0">
	<tr>
	<% Issue.more_than_three_priorities.alphabetical.all.in_groups_of(53) do |issues| %>
		<td valign="top" style="padding-right: 20px;">
			<% for issue in issues %>
				<% if issue %>
				<a href="http://whitehouse2.org/issues/<%= issue.name %>/points"><%= issue.name.titleize %></a><br/>
				<% end %>
			<% end %>
		</td>
	<% end %>
	</tr>
</table>
